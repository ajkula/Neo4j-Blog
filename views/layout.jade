mixin listData(list)
        select(name='actor')
            each obj, i in list
                actor = #{obj._fields[0]}
                option(value= i) #{obj._fields[0]}
        input(type='submit', id='submit', name='submit')

mixin movies(index, list)
    h1 Movies with #{list[index]._fields[0]}
    each obj, i in list[index]._fields[1]

        each item in obj
            each elem in item
                h2 #{elem.title}
                p #{elem.tagline}
        h3 Roles
        h5 #{obj[0]}
        br
